<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgprofil"
    tools:context=".UbahEmailActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="51dp"
        android:layout_height="32dp"
        android:layout_marginTop="24dp"
        android:onClick="pindah"
        app:layout_constraintBottom_toTopOf="@+id/emailama"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.029"
        app:srcCompat="@drawable/ic_back" />

    <TextView
        android:id="@+id/profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Profile"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/profict"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="@+id/profile"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="@+id/profile"
        app:layout_constraintTop_toBottomOf="@+id/profile"
        app:srcCompat="@drawable/propict" />

    <TextView
        android:id="@+id/textprof"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Foto Profil"
        android:textColor="#000000"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="245dp"
        app:layout_constraintEnd_toEndOf="@+id/profict"
        app:layout_constraintHorizontal_bias="0.581"
        app:layout_constraintStart_toStartOf="@+id/profict"
        app:layout_constraintTop_toBottomOf="@+id/profict" />

    <EditText
        android:id="@+id/emailama"
        android:layout_width="343dp"
        android:layout_height="48dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/bginput"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:hint="Email Lama"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textprof" />

    <EditText
        android:id="@+id/emailbaru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/bginput"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:hint="Email Baru"
        app:layout_constraintEnd_toEndOf="@+id/emailama"
        app:layout_constraintStart_toStartOf="@+id/emailama"
        app:layout_constraintTop_toBottomOf="@+id/emailama" />

    <ImageButton
        android:id="@+id/updatebt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="Update"
        android:onClick="back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailbaru"
        app:layout_constraintVertical_bias="0.039"
        app:srcCompat="@drawable/updatebtn" />


</androidx.constraintlayout.widget.ConstraintLayout>